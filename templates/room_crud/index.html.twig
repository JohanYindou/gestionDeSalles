{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Etage</th>
                <th>Capacity</th>
                <th>Price</th>
                <th>Address</th>
                <th>City</th>
                <th>Country</th>
                <th>Status</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Picture</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.description }}</td>
                <td>{{ room.etage }}</td>
                <td>{{ room.capacity }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.address }}</td>
                <td>{{ room.city }}</td>
                <td>{{ room.country }}</td>
                <td>{{ room.status }}</td>
                <td>{{ room.createdAt ? room.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ room.updatedAt ? room.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ room.picture }}</td>
                <td>{{ room.name }}</td>
                <td>
                    <a href="{{ path('app_room_crud_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('app_room_crud_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_room_crud_new') }}">Create new</a>
{% endblock %}
